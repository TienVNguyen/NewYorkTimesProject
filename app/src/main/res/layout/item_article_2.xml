<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="horizontal"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true"
    tools:layout_width="@dimen/card_layout_width">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/item2TextViewSnippet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/activity_horizontal_padding"
            android:textStyle="italic"
            tools:text="@string/image_description" />

        <View
            android:id="@+id/horizontalLine"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_below="@id/item2TextViewSnippet"
            android:background="@color/colorDarkBlue" />

        <TextView
            android:id="@+id/item2TextViewPubDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/horizontalLine"
            android:ellipsize="end"
            android:maxLines="3"
            android:padding="@dimen/activity_horizontal_padding"
            android:textStyle="italic"
            tools:text="@string/image_description" />

        <ImageView
            android:id="@+id/item2ImageViewShared"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@id/horizontalLine"
            android:contentDescription="@string/image_description"
            android:padding="@dimen/share_padding"
            android:src="@drawable/ic_share_black_24dp" />
    </RelativeLayout>
</android.support.v7.widget.CardView>